<% content_for(:title, "Topic | Bibliotherapy") %>

<h2><%= @topic.name %></h2>

<p><%= link_to "Add an Ailment", new_topic_ailment_path(@topic), id: "new_ailment_js", remote: true %></p>

<% if @topic.ailments.any? %>
  <h4>Here are the ailments for this topic</h4>

  <ul>
    <% @topic.ailments.each do |ailment| %>
      <li>
        <%= link_to ailment.description, topic_ailment_path(ailment) %> |
        <%= link_to "Edit", edit_topic_ailment_path(@topic, ailment), id: "edit_ailment_js", remote: true %> |
        <%= link_to "Delete", topic_ailment_path(@topic, ailment),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
      <% end %>
  </ul>
<% else %>
  <p>There are no ailments yet!</p>
<% end %>

<hr>

<p><%= link_to "Update Topic", edit_topic_path(@topic), id: "edit_topic_js", remote: true %></p>
<p><%= link_to "Delete Topic", topic_path(@topic),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
<p><%= link_to "Return to topics", topics_path %></p>
